# ==============================================
# VILA FALO - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB connection string - REQUIRED
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/vilafalo
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vilafalo?retryWrites=true&w=majority

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Port the server will run on (Heroku will set this automatically)
PORT=5000

# Environment (development, staging, production)
NODE_ENV=production

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Secret for token signing - REQUIRED
# Generate a secure random string (at least 64 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-64-characters-long

# Admin credentials for admin panel access
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password_change_this

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Frontend URL for CORS (adjust for your domain)
# For local development: http://localhost:5000
# For production: https://your-domain.com
CORS_ORIGIN=https://your-domain.com

# ==============================================
# CHATBOT CONFIGURATION
# ==============================================
# Google Gemini API key for chatbot functionality
# Get your API key from: https://makersuite.google.com/app/apikey
# Format should start with: AIzaSy...
# Model used: gemini-2.0-flash (latest model)
GEMINI_API_KEY=AIzaSyAZlkkhrHpvNXHpwokv9o4W7B9-b2QF_qk

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# Email settings for booking confirmations and newsletters
# If not configured, email features will be disabled

# Admin email for notifications
ADMIN_EMAIL=vilafalo@gmail.com

# SMTP Server settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Email authentication
EMAIL_USER=vilafalo@gmail.com
EMAIL_PASS=your-gmail-app-password-here

# Sender information
EMAIL_FROM=vilafalo@gmail.com
EMAIL_FROM_NAME=Vila Falo Resort

# ==============================================
# CONTACT INFORMATION
# ==============================================
VILLA_PHONE=+355 68 336 9436
VILLA_EMAIL=vilafalo@gmail.com

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Base URL of your application
BASE_URL=https://your-domain.com

# Default room prices (in your currency)
DEFAULT_ROOM_PRICE_STANDARD=80
DEFAULT_ROOM_PRICE_DELUXE=120
DEFAULT_ROOM_PRICE_SUITE=200

# Booking settings
MAX_BOOKING_DAYS_ADVANCE=365
MIN_BOOKING_DAYS_ADVANCE=1

# ==============================================
# HEROKU SPECIFIC (Automatically set by Heroku)
# ==============================================
# These are automatically set by Heroku, don't modify:
# HEROKU_APP_NAME=your-app-name
# HEROKU_SLUG_COMMIT=commit-hash
# HEROKU_RELEASE_VERSION=v1

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# Only needed for development/debugging
DEBUG=false
LOG_LEVEL=info

# ==============================================
# SOCIAL MEDIA & ANALYTICS (Optional)
# ==============================================
# Social media links
FACEBOOK_URL=https://facebook.com/vilafalo
INSTAGRAM_URL=https://instagram.com/vilafalo
TWITTER_URL=https://twitter.com/vilafalo

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
